{
  "id": "claude",
  "version": "1.0.0",
  "name": "Claude Code Integration",
  "description": "Configuration Claude Code avec commandes, hooks, MCP et marketplace",
  "documentationURL": "https://github.com/kodflow/devcontainer-template",
  "options": {
    "installClaude": {
      "type": "boolean",
      "default": true,
      "description": "Installer Claude Code CLI"
    },
    "bundle": {
      "type": "string",
      "enum": ["minimal", "standard", "full"],
      "default": "full",
      "description": "Bundle de configuration à installer"
    },
    "statusline": {
      "type": "boolean",
      "default": true,
      "description": "Activer la statusline personnalisée"
    }
  },
  "installsAfter": [
    "ghcr.io/devcontainers/features/common-utils"
  ]
}
