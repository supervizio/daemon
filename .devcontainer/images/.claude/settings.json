{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "model": "opus",
  "alwaysThinkingEnabled": true,
  "spinnerTipsEnabled": false,
  "promptSuggestionEnabled": true,
  "outputStyle": "default",
  "cleanupPeriodDays": 30,
  "statusLine": {
    "type": "command",
    "command": "status-line"
  },
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "60000",
    "MAX_THINKING_TOKENS": "10000",
    "MCP_TIMEOUT": "30000",
    "MAX_MCP_OUTPUT_TOKENS": "25000"
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Bash(npm:*)",
      "Bash(pnpm:*)",
      "Bash(yarn:*)",
      "Bash(bun:*)",
      "Bash(npx:*)",
      "Bash(node:*)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git branch:*)",
      "Bash(git show:*)",
      "Bash(git ls-files:*)",
      "Bash(git rev-parse:*)",
      "Bash(docker ps:*)",
      "Bash(docker logs:*)",
      "Bash(docker images:*)",
      "Bash(docker compose ps:*)",
      "Bash(docker compose logs:*)",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(which:*)",
      "Bash(echo:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(tree:*)",
      "Bash(make:*)",
      "Bash(cargo:*)",
      "Bash(go:*)",
      "Bash(python:*)",
      "Bash(pip:*)",
      "Bash(pytest:*)",
      "Bash(terraform validate:*)",
      "Bash(terraform fmt:*)",
      "Bash(terraform plan:*)",
      "Bash(hadolint:*)",
      "Bash(shellcheck:*)",
      "Bash(prettier:*)",
      "Bash(eslint:*)",
      "Bash(tsc:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh issue:*)",
      "Bash(gh repo:*)",
      "Bash(jq:*)",
      "Bash(yq:*)",
      "Bash(date:*)",
      "Bash(env:*)",
      "Bash(printenv:*)",
      "Bash(grepai:*)",
      "Bash(ruff:*)",
      "Bash(black:*)",
      "Bash(isort:*)",
      "Bash(mypy:*)",
      "Bash(pyright:*)",
      "Bash(goimports:*)",
      "Bash(golangci-lint:*)",
      "Bash(rustfmt:*)",
      "Bash(vitest:*)",
      "Bash(rubocop:*)",
      "Bash(phpcs:*)",
      "Bash(phpcbf:*)",
      "Bash(yamllint:*)",
      "Bash(sbt:*)",
      "Bash(scalafmt:*)",
      "Bash(scalafix:*)",
      "Bash(cmake:*)",
      "Bash(ctest:*)",
      "Bash(clang-format:*)",
      "Bash(clang-tidy:*)",
      "Bash(dart:*)",
      "Bash(flutter:*)",
      "Bash(mix:*)",
      "Bash(elixir:*)",
      "Bash(mvn:*)",
      "Bash(gradle:*)",
      "Bash(./gradlew:*)",
      "Bash(dotnet:*)",
      "Bash(kotlinc:*)",
      "Bash(ktlint:*)",
      "Bash(swift:*)",
      "Bash(swiftc:*)",
      "Bash(swiftformat:*)",
      "Bash(swiftlint:*)",
      "Bash(Rscript:*)",
      "Bash(perl:*)",
      "Bash(perltidy:*)",
      "Bash(perlcritic:*)",
      "Bash(prove:*)",
      "Bash(luacheck:*)",
      "Bash(stylua:*)",
      "Bash(busted:*)",
      "Bash(gfortran:*)",
      "Bash(fprettify:*)",
      "Bash(fpm:*)",
      "Bash(gnat:*)",
      "Bash(gnatpp:*)",
      "Bash(gprbuild:*)",
      "Bash(alr:*)",
      "Bash(cobc:*)",
      "Bash(fpc:*)",
      "Bash(lazbuild:*)",
      "Bash(octave:*)",
      "Bash(nasm:*)",
      "Bash(sqlfluff:*)",
      "Bash(sql-formatter:*)",
      "Bash(/home/vscode/.claude/scripts/*:*)",
      "Read(**/*)",
      "Glob(**/*)",
      "Grep(**/*)",
      "mcp__grepai__*",
      "mcp__context7__*"
    ],
    "deny": [],
    "additionalDirectories": []
  },
  "enableAllProjectMcpServers": true,
  "disabledMcpjsonServers": ["codacy", "playwright"],
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/home/vscode/.claude/scripts/session-init.sh",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "/home/vscode/.claude/scripts/post-compact.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/home/vscode/.claude/scripts/commit-validate.sh",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "/home/vscode/.claude/scripts/security.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "/home/vscode/.claude/scripts/log.sh",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "/home/vscode/.claude/scripts/pre-validate.sh \"$CLAUDE_FILE_PATH\"",
            "timeout": 60
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "/home/vscode/.claude/scripts/post-edit.sh \"$CLAUDE_FILE_PATH\"",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "/home/vscode/.claude/scripts/security.sh \"$CLAUDE_FILE_PATH\"",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "/home/vscode/.claude/scripts/test.sh \"$CLAUDE_FILE_PATH\"",
            "timeout": 60
          }
        ]
      },
      {
        "matcher": "Bash|Write|Edit|Read|Glob|Grep|Task",
        "hooks": [
          {
            "type": "command",
            "command": "/home/vscode/.claude/scripts/log.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "/home/vscode/.claude/scripts/on-stop.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "/home/vscode/.claude/scripts/notification.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
